# Google Gemini API key used by the persona generator.
GEMINI_API_KEY=your-gemini-api-key

# Shared secret used to authenticate Auth0 Actions when calling this API.
PERSONA_API_KEY=choose-a-strong-random-string

# Optional: comma separated list of allowed origins for CORS. Use * to allow all.
PERSONA_ALLOWED_ORIGINS=http://localhost:5173

# Optional: change the Gemini model used for persona creation.
# PERSONA_MODEL=gemini-2.5-flash

# Optional: specify which port the service should listen on.
# PORT=8787
